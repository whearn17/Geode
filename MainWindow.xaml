<Window x:Class="geode.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Login" Height="450" Width="800"
    WindowStyle="None"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    Background="Transparent"
    AllowsTransparency="True">

    <Border CornerRadius="10"
        BorderThickness="1"
        BorderBrush="#FF3E3E3E"
        ClipToBounds="True">

        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF2B2B2B" Offset="0" />
                <GradientStop Color="#FF1E1E1E" Offset="1" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!-- Window Control Buttons -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>

                <!-- Window Control Bar -->
                <Grid Grid.ColumnSpan="2"
                    Background="Transparent"
                    MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="70" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Login"
                        Foreground="White"
                        FontSize="14"
                        Margin="10,5,0,0" />

                    <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                        <Border Width="35"
                            Height="30"
                            Background="Transparent"
                            CornerRadius="0,0,0,20">
                            <Button x:Name="btnMinimize"
                                Width="35"
                                Height="30"
                                Content="−"
                                Click="btnMinimize_Click"
                                Style="{StaticResource WindowButtonStyle}" />
                        </Border>

                        <Border Width="35"
                            Height="30"
                            Background="Transparent"
                            CornerRadius="0,20,0,0">
                            <Button x:Name="btnClose"
                                Width="35"
                                Height="30"
                                Content="×"
                                Click="btnClose_Click"
                                Style="{StaticResource WindowButtonStyle}" />
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Configuration File Selection Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Text="Configuration Setup"
                    FontSize="32"
                    FontWeight="Bold"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    Margin="0,50,0,30" />

                <Grid Grid.Row="1" Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="txtConfigPath"
                        Style="{StaticResource ModernTextBox}"
                        IsReadOnly="True"
                        Width="Auto"
                        Tag="Selected Configuration File"
                        Margin="0,0,10,0" />

                    <Button x:Name="btnBrowse"
                        Grid.Column="1"
                        Content="Browse"
                        Click="btnBrowse_Click"
                        Style="{StaticResource ModernButton}"
                        Width="100" />
                </Grid>

                <Button x:Name="btnLogin"
                    Grid.Row="2"
                    Content="LOAD CONFIGURATION"
                    Click="btnLogin_Click"
                    Style="{StaticResource ModernButton}" />
            </Grid>
        </Grid>
    </Border>
</Window>